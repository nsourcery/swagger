{
    "name": "@nsourcery/swagger",
    "version": "0.0.0",
    "description": "Template project for nsourcery libs",
    "author": "Get√∫lio Magela Silva",
    "license": "MIT",
    "repository": "https://github.com/nsourcery/swagger",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "prebuild": "rm -rf dist",
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier \"./**/*.ts\" --write",
        "lint": "eslint './**/*.ts' --fix",
        "test": "jest",
        "test:dev": "jest --watch",
        "prerelease": "standard-version",
        "prebuild:release": "npm run build",
        "build:release": "npm run package:release",
        "package:release": "cp package.json README.md dist",
        "release": "npm run build:release",
        "postrelease": "npm run publish:release",
        "prepublish:release": "git push --follow-tags origin main",
        "publish:release": "npm publish dist",
        "prereset": "rm -rf .git",
        "reset": "git init && git checkout -b main",
        "postreset": "npm i --save-dev husky"
    },
    "dependencies": {
        "@nestjs/mapped-types": "0.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "11.0.0",
        "@commitlint/config-angular": "11.0.0",
        "@nestjs/common": "7.4.4",
        "@nestjs/core": "7.4.4",
        "@nestjs/platform-express": "7.4.4",
        "@nestjs/platform-fastify": "7.4.4",
        "@nestjs/testing": "^7.4.4",
        "@types/jest": "^26.0.14",
        "@types/lodash": "4.14.161",
        "@types/node": "^11.15.0",
        "@typescript-eslint/eslint-plugin": "4.2.0",
        "@typescript-eslint/parser": "4.2.0",
        "class-transformer": "0.3.1",
        "class-validator": "0.12.2",
        "eslint": "7.9.0",
        "eslint-config-prettier": "6.12.0",
        "eslint-plugin-import": "2.22.0",
        "express": "4.17.1",
        "fastify-swagger": "3.3.0",
        "husky": "^4.3.0",
        "jest": "26.4.2",
        "lint-staged": "^10.4.0",
        "prettier": "2.1.2",
        "reflect-metadata": "0.1.13",
        "standard-version": "^9.0.0",
        "swagger-parser": "10.0.2",
        "swagger-ui-express": "4.1.4",
        "ts-jest": "26.4.0",
        "typescript": "3.9.7"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "git add -f"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test",
            "pre-push": "npm test",
            "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
        }
    }
}